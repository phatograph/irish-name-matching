<h3 class="section-header">New Lookup Table Records</h3>
<%= form_for @record, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ref, "Reference", :class => 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.number_field :ref, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <%= link_to "Back", lookup_table_records_path, :class => 'btn btn-link' %>
    </div>
  </div>
  <% if @record.errors.any? %>
    <div class="row">
      <div class="text-danger col-sm-offset-2 col-sm-10">
        <h5>Error:</h5>
        <ul>
          <% @record.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
